<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.stv.launcher.widget.TabSpace
        android:id="@+id/tabspace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabspace_height"
        android:layout_marginTop="@dimen/tabspace_margin_top"
        android:background="#330099" />

    <com.stv.launcher.widget.MetroSpace
        android:id="@+id/metro_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabspace"
        android:background="@drawable/workspace_bg" >

        <com.stv.launcher.widget.MetroViewPager
            android:id="@+id/metro_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:background="#ffffff" />
    </com.stv.launcher.widget.MetroSpace>

