<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.stv.launcher.widget.TabSpace
        android:id="@+id/tabspace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabspace_height"
        android:layout_marginTop="@dimen/tabspace_margin_top" />

    <com.stv.launcher.widget.MetroSpace
        android:id="@+id/metro_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabspace"
        android:background="@drawable/workspace_bg" >
    </com.stv.launcher.widget.MetroSpace>

    <com.stv.launcher.widget.FocusIndicatorView
        android:id="@+id/focus_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>